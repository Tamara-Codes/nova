    {
      "id": "code-heading",
      "type": "code",
      "language": "python",
      "code": "class Heading(Block):\n    def __init__(\n        self,\n        level: int,\n        content: str,\n        anchor: str = None,\n        align: str = \"left\"\n    ):\n        \"\"\"Create a heading block.\n        \n        Args:\n            level: Heading level (1-6)\n            content: Heading text\n            anchor: URL anchor for linking\n            align: Text alignment (left, center, right)\n        \"\"\"\n        \n# Example usage\nheading = Heading(level=1, content=\"Introduction\")\ndoc.add_block(heading)",
      "caption": "Heading block",
      "showLineNumbers": true,
      "highlightLines": []
    },
    {
      "id": "h4-paragraph-block",
      "type": "heading",
      "level": 4,
      "content": "Paragraph",
      "anchor": "paragraph-block",
      "style": {
        "align": "left"
      }
    },
    {
      "id": "code-paragraph",
      "type": "code",
      "language": "python",
      "code": "class Paragraph(Block):\n    def __init__(\n        self,\n        content: Union[str, List[TextSegment]],\n        align: str = \"left\",\n        indent: int = 0\n    ):\n        \"\"\"Create a paragraph block.\n        \n        Args:\n            content: Plain text or list of formatted segments\n            align: Text alignment\n            indent: Indentation level\n        \"\"\"\n        \n# Example with plain text\npara1 = Paragraph(content=\"This is plain text.\")\n\n# Example with rich formatting\nfrom nova import TextSegment\npara2 = Paragraph(content=[\n    TextSegment(text=\"This is \"),\n    TextSegment(text=\"bold\", bold=True),\n    TextSegment(text=\" text.\")\n])\n\ndoc.add_block(para1)\ndoc.add_block(para2)",
      "caption": "Paragraph block",
      "showLineNumbers": true,
      "highlightLines": [16, 20]
    },
    {
      "id": "h4-code-block",
      "type": "heading",
      "level": 4,
      "content": "Code",
      "anchor": "code-block",
      "style": {
        "align": "left"
      }
    },
    {
      "id": "code-code-block",
      "type": "code",
      "language": "python",
      "code": "class Code(Block):\n    def __init__(\n        self,\n        code: str,\n        language: str = \"text\",\n        caption: str = None,\n        show_line_numbers: bool = True,\n        highlight_lines: List[int] = None\n    ):\n        \"\"\"Create a code block.\n        \n        Args:\n            code: Source code content\n            language: Programming language for syntax highlighting\n            caption: Optional caption (e.g., filename)\n            show_line_numbers: Whether to display line numbers\n            highlight_lines: List of line numbers to highlight\n        \"\"\"\n        \n# Example\ncode_block = Code(\n    code='print(\"Hello, World!\")',\n    language=\"python\",\n    caption=\"hello.py\",\n    show_line_numbers=True,\n    highlight_lines=[1]\n)\ndoc.add_block(code_block)",
      "caption": "Code block",
      "showLineNumbers": true,
      "highlightLines": []
    },
