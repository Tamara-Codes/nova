    {
      "id": "code-table",
      "type": "code",
      "language": "python",
      "code": "class Table(Block):\n    def __init__(\n        self,\n        headers: List[str],\n        rows: List[List[str]],\n        caption: str = None,\n        stripes: bool = True,\n        borders: str = \"all\"\n    ):\n        \"\"\"Create a table block.\n        \n        Args:\n            headers: Column headers\n            rows: Table data (list of rows)\n            caption: Optional table caption\n            stripes: Alternate row colors\n            borders: Border style (all, none, horizontal)\n        \"\"\"\n        \n# Example\ntable = Table(\n    caption=\"User Data\",\n    headers=[\"Name\", \"Email\", \"Role\"],\n    rows=[\n        [\"Alice\", \"alice@example.com\", \"Admin\"],\n        [\"Bob\", \"bob@example.com\", \"User\"]\n    ],\n    stripes=True\n)\ndoc.add_block(table)",
      "caption": "Table block",
      "showLineNumbers": true,
      "highlightLines": []
